.container
  - if @user.errors.any?
    .row.col-xs-12.errors
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .row
    .col-xs-6.well
      = form_for @user, url: account_user_path(current_user.id), :html => {:class => 'edit_user'}, method: "patch" do |f|
        .form_group
          = f.label :email, t('your_email'),class:'form-label'
          = f.text_field :email, class:'form-control'

        .form_group
          = f.label :first_name, t('your_firstname'), class:'form-label'
          = f.text_field :first_name, class:'form-control'

        .form_group
          = f.label :last_name, t('your_lastname'), class:'form-label'
          = f.text_field :last_name, class:'form-control'

        .form_group
          = f.submit t('save'), :class => 'btn btn-primary pull-right'
    .col-xs-5.col-xs-offset-1.well
      =form_for @user, url: account_user_path(current_user.id), :html => {:class => 'edit_user'}, method: "patch" do |f|
        .form-group
          = f.label :password, t('your_password')
          = f.password_field :password, class: 'form-control'
        .form-group
          = f.label :password_confirmation, t('your_password_confirmation')
          = f.password_field :password_confirmation, class: 'form-control'
        .form-group
          = f.submit t('save'), :class => "btn btn-primary pull-right"
